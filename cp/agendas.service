[Unit]
Description=Agenda Daemon
Type=forking
After=network.target

[Service]
ExecStart=/usr/bin/node /home/admin/khk-agendas/agenda.js
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target

